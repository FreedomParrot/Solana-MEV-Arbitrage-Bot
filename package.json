    "bs58": "^5.0.0",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "figlet": "^1.9.4",
    "gradient-string": "^2.0.2",
    "inquirer": "^8.2.7",
    "ora": "^5.4.1"
  },

{
  "name": "solana-arbitrage-bot",
  "version": "1.0.0",
  "description": "Production-ready Solana arbitrage bot using Jupiter V6 API",
  "main": "dist/index.js",
  "bin": {
    "solana-arb-bot": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "compile": "npm run build && npm run create-launcher",
